def toBinary(n: Int): List[Int] = n match {
  case 0 | 1 => List(n)
  case _ => toBinary(n / 2) ++ List[Int](n % 2)
}

def isPalindrome[A](l: List[A]): Boolean = l match {
  case Nil => true
  case List(a) => true
  case list => list.head == list.last && isPalindrome(list.tail.init)
}

